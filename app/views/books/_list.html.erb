<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100, 100) %><br />
  <span>name <%= @user.name %></span><br />
  <span>introduction <%= @user.introduction %></span><br />
  <%= link_to "User Edit", edit_user_path(params[:id]) %>
  
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br />
    <%= f.submit 'Create Book' %>
  <% end %>
</div>