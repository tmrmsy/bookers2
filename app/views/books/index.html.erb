<main>
  <div class="container px-5 px-sm-0">
    <%= render '/layouts/book_errors', book:@book %>
    <div class="row">
      <div class="col-md-3">
        <%= render '/users/user_info', user: @user %>
        <%= render '/books/new_book', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to image_tag(book.user.get_profile_image(40, 40)), user_path(book.user.id), class: 'attachment user profile_image fallback' %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>